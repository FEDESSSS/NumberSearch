<Window x:Class="APIshka.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIshka"
        mc:Ignorable="d"
        Title="DetailWindow" Height="400" Width="500" MinWidth="500">
    <Grid>
        <TextBlock x:Name="FactTextBlock" TextWrapping="Wrap" FontSize="16" Margin="10"/>
        <TextBlock x:Name="NumberTextBlock" FontSize="14" Margin="10,40,10,10"/>
        <TextBlock x:Name="TypeTextBlock" FontSize="14" Margin="10,70,10,10"/>
    </Grid>
</Window>
